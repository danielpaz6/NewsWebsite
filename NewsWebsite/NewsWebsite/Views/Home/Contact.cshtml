@model IEnumerable<NewsWebsite.Models.Setting>
@{ViewBag.Title = "Contact"; }

<div class="row">
    <div class="container mt-5">
        <div class="row" style="height:550px;">
            <div class="col-md-6 maps">
                <div class="dropdown" style="margin-top:-30px">
                    <button class="btn dropdown-toggle fixed-btn-overall" type="button" id="selectLocation" data-toggle="dropdown">
                        Select one of our locations
                        <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" id="locationSelected">
                        @if (Model.Count() > 0)
                        {
                            foreach (var item in Model)
                            {
                                <li><a class="dropdown-item" href="#">@item.Value</a></li>
                            }
                        }
                    </ul>
                </div>

                <div class="mapouter">
                    <div class="gmap_canvas">
                        @if (Model.Count() > 0)
                        {
                            <iframe width="600" height="500" id="gmap_canvas" src="https://maps.google.com/maps?q=@(Model.ElementAt(0).Value)&t=&z=13&ie=UTF8&iwloc=&output=embed" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"></iframe>
                        }
                    </div>
                    <style>
                        .mapouter {
                            position: relative;
                            text-align: right;
                            height: 500px;
                            width: 450px;
                        }

                        .gmap_canvas {
                            overflow: hidden;
                            background: none !important;
                            height: 500px;
                            width: 450px;
                        }
                    </style>
                </div>
            </div>
            <div class="col-md-6">
                <h2 class="text-uppercase mt-3 font-weight-bold">Contact Us</h2>
                <form action="">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <input type="text" class="form-control mt-2" placeholder="Name" required>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <input type="text" class="form-control mt-2" placeholder="Subject" required>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <input type="email" class="form-control mt-2" placeholder="Email" required>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <input type="number" class="form-control mt-2" placeholder="Phone" required>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-group">
                                <textarea class="form-control" id="exampleFormControlTextarea1" placeholder="Tell us about your subject" rows="3" required></textarea>
                            </div>
                        </div>
                        <div class="col-12">
                            <button class="btn btn-light" type="submit">Submit</button>
                        </div>
                    </div>
                </form>
                <div>
                    <h2 class="text-uppercase mt-4 font-weight-bold">Information</h2>
                    <i class="fa fa-envelope mt-3"></i> <a href="https://github.com/OpalKo93">https://github.com/OpalKo93</a><br>
                    <i class="fa fa-envelope mt-3"></i> <a href="https://github.com/OmerNahum">https://github.com/OmerNahum</a><br>
                    <i class="fa fa-envelope mt-3"></i> <a href="https://github.com/OrMizrahi">https://github.com/OrMizrahi</a><br>
                    <i class="fa fa-envelope mt-3"></i> <a href="https://github.com/danielpaz6">https://github.com/danielpaz6</a><br>
                    <div class="my-4">
                        <a href=""><i class="fab fa-facebook fa-3x pr-4"></i></a>
                        <a href=""><i class="fab fa-linkedin fa-3x"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div id="map_wrapper">
    <div id="map_canvas" class="mapping"></div>
</div>
